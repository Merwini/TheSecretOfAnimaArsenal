<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<ThingDef ParentName="ArmorSmithableBase">
		<defName>WotR_Apparel_BioferritePlate</defName>
		<label>witchblade plate armor</label>
		<description>A suit of plate armor intended for those who are psychically sensitive, but have not mastered the art of psycasting. The bioferrite has been twisted by psychic patterns born of dark archotech so that, instead of bolstering the psychic powers of the wearer, it feeds on them to strengthen itself.</description>
		<possessionCount>1</possessionCount>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<researchPrerequisite>PlateArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<displayPriority>250</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/PlateArmor/PlateArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<WorkToMake>38000</WorkToMake>
			<MaxHitPoints>290</MaxHitPoints>
			<Mass>15</Mass>
			<ArmorRating_Sharp>0.9</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
			<ArmorRating_Heat>0.6</ArmorRating_Heat>
			<EquipDelay>15</EquipDelay>
		</statBases>
		<thingSetMakerTags>
			<li>RewardStandardQualitySuper</li>
		</thingSetMakerTags>
		<equippedStatOffsets>
			<PsychicSensitivity>-0.1</PsychicSensitivity>
			<MoveSpeed>-0.15</MoveSpeed>
		</equippedStatOffsets>
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		<costList>
			<Bioferrite>150</Bioferrite>
			<DevilstrandCloth>80</DevilstrandCloth>
		</costList>
		<tradeTags>
			<li>Clothing</li>
			<li>Armor</li>
		</tradeTags>
		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Neck</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/PlateArmor/PlateArmor</wornGraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>MedievalMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.39,0.31,0.31)</only>
				</li>
				<li>
					<weight>6</weight>
					<min>(0.34,0.26,0.26)</min>
					<max>(0.44,0.36,0.36)</max>
				</li>
			</options>
		</colorGenerator>
		<modExtensions>
			<li Class="nuff.witches.arsenal.PsyScalingExtension">
				<scalingMultiplier>0.5</scalingMultiplier>
			</li>
		</modExtensions>
	</ThingDef>

