<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="ApparelMakeableBase">
		<defName>TSOA_AnimaArmor</defName>
		<label>anima shaman armor</label>
		<description>A full-body suit of shamanic armor. Made from woven anima grass and plates of anima tree bark, it offers little in the way of physical protection, but instead allows the wearer to subconsciously project a psychic force field that blocks incoming damage at the cost of building up neural heat.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/EltexRobe/EltexRobe</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<tickerType>Normal</tickerType>
		
		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>20000</WorkToMake>
			<Mass>4.0</Mass>
			<Flammability>0.6</Flammability>
			<ArmorRating_Sharp>0.7</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.55</ArmorRating_Blunt>
			<ArmorRating_Heat>0.3</ArmorRating_Heat>
			<EquipDelay>11</EquipDelay>
		</statBases>

		<equippedStatOffsets>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.3</SlaveSuppressionOffset>
		</equippedStatOffsets>
		
		<costList>
			<TSOA_AnimaGrassResource>150</TSOA_AnimaGrassResource>
			<TSOA_AnimaBark>6</TSOA_AnimaBark>
		</costList>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<!-- TODO research prereq -->
			<!-- TODO anima workbench? -->
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>8</Crafting>
			</skillRequirements>
			<displayPriority>275</displayPriority>
		</recipeMaker>
		
		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>
		
		<apparel>
			<bodyPartGroups>
				<li>Neck</li>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/TribalA/TribalA</wornGraphicPath>
			<layers>
				<li>Middle</li>
			</layers>
			<tags>
				<li>Medieval</li>
			</tags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
			<defaultOutfitTags>
				<li>Soldier</li>
				<li>Spacefarer</li>
			</defaultOutfitTags>
		</apparel>
		
		<tradeability>Sellable</tradeability>
		<tradeTags>
			<li>Clothing</li>
			<li>Armor</li>
		</tradeTags>
		
		<comps>
			<li Class="nuff.tsoa.arsenal.CompProperties_PsyShield" />
		</comps>
	</ThingDef>

