	<ThingDef ParentName="ArmorSmithableBase">
		<defName>TSOA_BioferriteArmor</defName>
		<label>void knight plate armor</label>
		<description>A suit of armor crafted from bioferrite. This bioferrite feeds on the psychic capabilites of the wearer, making itself stronger but weakening the wearer in the process.</description>
		<possessionCount>1</possessionCount>
		<recipeMaker>
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<researchPrerequisite>PlateArmor</researchPrerequisite>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<displayPriority>277</displayPriority>
		</recipeMaker>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/PlateArmor/PlateArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<statBases>
			<WorkToMake>38000</WorkToMake>
