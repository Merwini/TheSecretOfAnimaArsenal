<Defs>

	<!-- Anima Tomahawk -->
	<ThingDef ParentName="BaseMeleeWeapon_Sharp_Quality">
		<defName>TSOA_AnimaTomahawk</defName>
		<label>anima hatchet</label>
		<description>A hatchet made to channel the psychic energy of its wielder into destructive force. The haft is carved from anima tree bark and wrapped in anima grass, absorbing neural heat from the wielder which is then released by the jade blade into one's foes.</description>
		<!-- TODO replace once textures are finished -->
		<graphicData>
			<texPath>Things/Item/Equipment/WeaponMelee/Gladius</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<equippedAngleOffset>-65</equippedAngleOffset>
		<techLevel>Medieval</techLevel>
		<relicChance>3</relicChance>

		<statBases>
			<MaxHitPoints>200</MaxHitPoints>
			<WorkToMake>24000</WorkToMake>
			<Mass>1</Mass>
		</statBases>

		<costList>
			<TSOA_AnimaGrassResource>10</TSOA_AnimaGrassResource>
			<TSOA_AnimaBark>1</TSOA_AnimaBark>
			<Jade>10</Jade>
			<Steel>10</Steel>
		</costList>
		<recipeMaker>
			<researchPrerequisite>TSOA_AnimaWeapons</researchPrerequisite>
			<unfinishedThingDef>UnfinishedWeapon</unfinishedThingDef>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<displayPriority>279</displayPriority>
		</recipeMaker>

		<tools>
			<li>
				<label>handle</label>
				<capacities>
					<li>Poke</li>
				</capacities>
				<power>9</power>
				<cooldownTime>2</cooldownTime>
			</li>
			<li>
				<label>edge</label>
				<capacities>
					<li>Cut</li>
				</capacities>
				<power>14</power>
				<cooldownTime>1.6</cooldownTime>
				<extraMeleeDamages>
					<li>
						<def>TSOA_EntropyExtraDamage</def>
						<amount>1</amount>
					</li>
				</extraMeleeDamages>
			</li>
		</tools>
		
		<modExtensions>
			<li Class="nuff.tsoa.core.EntropyExtraDamageExtension">
				<damageDef>TSOA_EntropicDischarge</damageDef>
			</li>
		</modExtensions>

		<tradeTags>
			<li>WeaponMelee</li>
		</tradeTags>
		<!-- TODO weaponTags after I make factions -->
		<weaponClasses>
			<li>Neolithic</li>
			<li>Melee</li>
		</weaponClasses>
	</ThingDef>

