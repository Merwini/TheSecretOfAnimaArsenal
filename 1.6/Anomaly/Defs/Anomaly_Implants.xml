	<!-- bioferrite clawed arm -->
	<HediffDef ParentName="AddedBodyPartBase" Abstract="True" Name="TSOA_BioferriteArmBase">
		<labelNoun>a set of bioferrite clawed arm</labelNoun>
		<descriptionHyperlinks>
			<ThingDef>TSOA_BioferriteRendingClaws</ThingDef>
		</descriptionHyperlinks>
		<spawnThingOnRemoved>TSOA_BioferriteRendingClaws</spawnThingOnRemoved>
		<addedPartProps>
			<solid>true</solid>
			<betterThanNatural>true</betterThanNatural>
		</addedPartProps>
	</HediffDef>

	<HediffDef ParentName="TSOA_BioferriteArmBase">
		<defName>TSOA_BioferriteArmOne</defName>
		<label>bioferrite clawed arm (inert)</label>
		<description>A bioferrite arm ending in clawed fingers. The wielder's psychic connection is too weak to even ambulate the digits, leaving it as little more than a hand-shaped lump of metal.</description>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>fist</label>
						<capacities>
							<li>Blunt</li>
						</capacities>
						<power>10</power>
						<armorPenetration>0.1</armorPenetration>
						<cooldownTime>2.4</cooldownTime>
						<soundMeleeHit>MeleeHit_BionicPunch</soundMeleeHit>
						<soundMeleeMiss>MeleeMiss_BionicPunch</soundMeleeMiss>
					</li>
				</tools>
			</li>
			<li Class="nuff.tsoa.core.HediffCompProperties_Evolving">
				<evolvingStat>PsychicSensitivity</evolvingStat>
				<upperThreshold>0.49</upperThreshold>
				<hediffAbove>TSOA_BioferriteArmTwo</hediffAbove>
			</li>
		</comps>
		<addedPartProps>
			<partEfficiency>0.5</partEfficiency>
		</addedPartProps>
	</HediffDef>

	<HediffDef ParentName="TSOA_BioferriteArmBase">
		<defName>TSOA_BioferriteArmTwo</defName>
		<label>bioferrite clawed arm (dampened)</label>
		<description>A bioferrite arm ending in clawed fingers. The wielder's weak psychic connection leaves them dull and clumsy.</description>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>claw</label>
						<capacities>
							<li>Scratch</li>
						</capacities>
						<power>12</power>
						<armorPenetration>0.15</armorPenetration>
						<cooldownTime>2</cooldownTime>
						<soundMeleeHit>MeleeHit_BionicSlash</soundMeleeHit>
						<soundMeleeMiss>MeleeMiss_BionicSlash</soundMeleeMiss>
					</li>
				</tools>
			</li>
			<li Class="nuff.tsoa.core.HediffCompProperties_Evolving">
				<evolvingStat>PsychicSensitivity</evolvingStat>
				<upperThreshold>0.89</upperThreshold>
				<hediffAbove>TSOA_BioferriteArmThree</hediffAbove>
				<lowerThreshold>0.5</lowerThreshold>
				<hediffBelow>TSOA_BioferriteArmOne</hediffBelow>
			</li>
		</comps>
		<addedPartProps>
			<partEfficiency>0.75</partEfficiency>
		</addedPartProps>
	</HediffDef>

	<HediffDef ParentName="TSOA_BioferriteArmBase">
		<defName>TSOA_BioferriteArmThree</defName>
		<label>bioferrite clawed arm</label>
		<description>A bioferrite arm ending in clawed fingers. The wielder's psychic connection keeps the claws sharp and the fingers nimble.</description>
		<stages>
			<li>
				<statOffsets>
					<MentalBreakThreshold>-0.01</MentalBreakThreshold>
				</statOffsets>
			</li>
		</stages>
		<comps>
			<li Class="HediffCompProperties_VerbGiver">
				<tools>
					<li>
						<label>claw</label>
						<capacities>
							<li>Scratch</li>
						</capacities>
						<power>14</power>
						<armorPenetration>0.3</armorPenetration>
						<cooldownTime>1.6</cooldownTime>
						<alwaysTreatAsWeapon>true</alwaysTreatAsWeapon>
						<soundMeleeHit>MeleeHit_BionicSlash</soundMeleeHit>
						<soundMeleeMiss>MeleeMiss_BionicSlash</soundMeleeMiss>
					</li>
				</tools>
			</li>
			<li Class="nuff.tsoa.core.HediffCompProperties_Evolving">
				<evolvingStat>PsychicSensitivity</evolvingStat>
				<upperThreshold>1.19</upperThreshold>
				<hediffAbove>TSOA_BioferriteArmFour</hediffAbove>
				<lowerThreshold>0.9</lowerThreshold>
				<hediffBelow>TSOA_BioferriteArmTwo</hediffBelow>
			</li>
		</comps>
		<addedPartProps>
			<partEfficiency>1</partEfficiency>
		</addedPartProps>
	</HediffDef>

	<HediffDef ParentName="TSOA_BioferriteArmBase">
