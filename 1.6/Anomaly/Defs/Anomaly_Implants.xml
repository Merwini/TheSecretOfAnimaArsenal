		<descriptionHyperlinks>
			<ThingDef>TSOA_BioferriteRendingClaws</ThingDef>
			<HediffDef>TSOA_BioferriteArmThree</HediffDef>
		</descriptionHyperlinks>
		<jobString>Installing bioferrite clawed arm.</jobString>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>TSOA_BioferriteRendingClaws</li>
					</thingDefs>
				</filter>
				<count>1</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>TSOA_BioferriteRendingClaws</li>
			</thingDefs>
		</fixedIngredientFilter>
		<appliedOnFixedBodyParts>
			<li>Shoulder</li>
		</appliedOnFixedBodyParts>
		<addsHediff>TSOA_BioferriteArmThree</addsHediff>
	</RecipeDef>

