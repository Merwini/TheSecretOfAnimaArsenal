<?xml version="1.0" encoding="utf-8"?>
<Defs>

	<ThingDef ParentName="ArmorSmithableBase">
		<defName>TSOA_BioferriteArmor</defName>
		<label>void knight plate armor</label>
		<description>A suit of armor crafted from bioferrite. This bioferrite feeds on the psychic capabilites of the wearer, making itself stronger but weakening the wearer in the process.</description>
		<graphicData>
			<texPath>Things/Pawn/Humanlike/Apparel/PlateArmor/PlateArmor</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Medieval</techLevel>
		<relicChance>2</relicChance>

		<statBases>
			<WorkToMake>38000</WorkToMake>
			<MaxHitPoints>320</MaxHitPoints>
			<Mass>15</Mass>
			<ArmorRating_Sharp>0.9</ArmorRating_Sharp>
			<ArmorRating_Blunt>0.5</ArmorRating_Blunt>
			<ArmorRating_Heat>0.6</ArmorRating_Heat>
			<EquipDelay>15</EquipDelay>
			<TSOA_PsyScaling>1</TSOA_PsyScaling>
		</statBases>

		<equippedStatOffsets>
			<MoveSpeed>-0.15</MoveSpeed>
			<SlaveSuppressionOffset MayRequire="Ludeon.RimWorld.Ideology">-0.4</SlaveSuppressionOffset>
		</equippedStatOffsets>

		<costList>
			<Bioferrite>150</Bioferrite>
			<Gold>50</Gold>
		</costList>
		<recipeMaker>
			<!-- TODO research prereq -->
			<unfinishedThingDef>UnfinishedMetallicTechArmor</unfinishedThingDef>
			<recipeUsers>
				<li>ElectricSmithy</li>
				<li>FueledSmithy</li>
			</recipeUsers>
			<skillRequirements>
				<Crafting>7</Crafting>
			</skillRequirements>
			<displayPriority>277</displayPriority>
		</recipeMaker>

		<thingCategories>
			<li>ApparelArmor</li>
		</thingCategories>

		<apparel>
			<bodyPartGroups>
				<li>Torso</li>
				<li>Shoulders</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
			<wornGraphicPath>Things/Pawn/Humanlike/Apparel/PlateArmor/PlateArmor</wornGraphicPath>
			<layers>
				<li>Middle</li>
				<li>Shell</li>
			</layers>
			<tags>
				<li>MedievalMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>

		<tradeability>Sellable</tradeability>
		<tradeTags>
			<li>Clothing</li>
			<li>Armor</li>
		</tradeTags>
	</ThingDef>

